<xml>
	<section if="windows">
		<files id="haxe">
 			<compilerflag value="-I${haxelib:hxWidgets}/../wxWidgets/include" />
			<compilerflag value="-I${haxelib:hxWidgets}/../wxWidgets/windows/vc120/x86/lib/mswu" />
			<compilerflag value="-DUNICODE" />
			<compilerflag value="-D_UNICODE" />
			<compilerflag value="-DWXUSINGDLL" />
			<compilerflag value="-DwxMSVC_VERISON_AUTO" />
		</files>

		<target id="haxe" tool="linker" toolid="exe">
			<lib name="${haxelib:hxWidgets}/../wxWidgets/windows/vc120/x86/lib/wxmsw30u_xrc.lib" />
			<lib name="${haxelib:hxWidgets}/../wxWidgets/windows/vc120/x86/lib/wxmsw30u_webview.lib" />
			<lib name="${haxelib:hxWidgets}/../wxWidgets/windows/vc120/x86/lib/wxmsw30u_html.lib" />
			<lib name="${haxelib:hxWidgets}/../wxWidgets/windows/vc120/x86/lib/wxmsw30u_qa.lib" />
			<lib name="${haxelib:hxWidgets}/../wxWidgets/windows/vc120/x86/lib/wxmsw30u_adv.lib" />
			<lib name="${haxelib:hxWidgets}/../wxWidgets/windows/vc120/x86/lib/wxmsw30u_core.lib" />
			<lib name="${haxelib:hxWidgets}/../wxWidgets/windows/vc120/x86/lib/wxbase30u_xml.lib" />
			<lib name="${haxelib:hxWidgets}/../wxWidgets/windows/vc120/x86/lib/wxbase30u_net.lib" />
			<lib name="${haxelib:hxWidgets}/../wxWidgets/windows/vc120/x86/lib/wxbase30u.lib" />
		</target>
	</section>

	<section if="linux">
		<files id="haxe">
			<compilerflag value="-I/usr/lib64/wx/include/gtk2-unicode-3.0" />
			<compilerflag value="-I/usr/include/wx-3.0" />
			<compilerflag value="-D_FILE_OFFSET_BITS=64" />
			<compilerflag value="-DwxDEBUG_LEVEL=0" />
			<compilerflag value="-DWXUSINGDLL" />
			<compilerflag value="-D__WXGTK__" />
			<compilerflag value="-pthread" />
		</files>

		<target id="haxe" tool="linker" toolid="exe">
			<compilerflag value="-L/usr/lib64" />
			<lib name="-lwx_gtk2u_xrc-3.0" />
			<lib name="-lwx_gtk2u_webview-3.0" />
			<lib name="-lwx_gtk2u_html-3.0" />
			<lib name="-lwx_gtk2u_qa-3.0" />
			<lib name="-lwx_gtk2u_adv-3.0" />
			<lib name="-lwx_gtk2u_core-3.0" />
			<lib name="-lwx_baseu_xml-3.0" />
			<lib name="-lwx_baseu_net-3.0" />
			<lib name="-lwx_baseu-3.0" />
		</target>
	</section>
</xml>
